{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "plugin:meteor/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "meteor"

    ],
    "rules": {
        "import/extensions": 0,
        "import/no-absolute-path": 0,
        "react/prop-types":0,
        "no-underscore-dangle": ["error", { "allow": ["_id"] }]
    },
    "settings": {
        "import/resolver": {
          "meteor": {
            "extensions": [
              ".js",
              ".jsx"
            ]
          }
        }
    }    
}